@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="" id="login-wrapper">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div id="logo-login">
                <h1>
                    GTM
                    <span>v1.0</span>
                </h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="account-box">
                <form role="form">
                    @{Html.RenderAction("_Login", "Login");}
                </form>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

